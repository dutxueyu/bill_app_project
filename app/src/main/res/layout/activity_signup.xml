<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xueyudlut.connectsql.SignupActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/royalblue"
        android:layout_marginTop="60dp"
        android:text="用户注册" />
    <EditText
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/royalblue"
        android:textColorHint="@color/grey"
        android:ems="10"
        android:hint="用户名"
        android:layout_below="@+id/txt_Title"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txt_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="密码"
        android:inputType="textPassword"
        android:textColor="@color/royalblue"
        android:textColorHint="@color/grey" />
    <EditText
        android:id="@+id/txt_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_password1"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="确认密码"
        android:textColor="@color/royalblue"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/txt_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_password2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="公司名称或ID"
        android:textColor="@color/royalblue"
        android:textColorHint="@color/grey" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/radiogroup"
        android:layout_alignStart="@+id/txt_org"
        android:layout_below="@+id/txt_org"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/radiobtn_boss"
        android:layout_width="110dp"
        android:checked="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="管理员" />

    <RadioButton
        android:id="@+id/radioBtn_user"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignTop="@+id/radiobtn_boss"
        android:layout_toEndOf="@+id/radiobtn_boss"
        android:text="员工" />
    </RadioGroup>
    <EditText
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="姓名"
        android:textColor="@color/royalblue"
        android:textColorHint="@color/grey" />
    <Button
        android:id="@+id/btn_signin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/royalblue"
        android:text="注册"
        android:layout_below="@+id/txt_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

            <ProgressBar
                android:id="@+id/processbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_signin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                 />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
